<%  posts.slice(-10).forEach(function(post){ %>


<div class="card w-250  text-white bg-dark mb-3">
	<div class="card-header" style="font-size: 20px; text-align: center;"> <span class="badge badge-dark"><%=post.title%></div>
	<div class="card-body">
		<h5 class="card-title" style="text-align: center;"><%=post.content.substring(0, 100) + ""%></h5>
		<a href="/posts/<%=post._id%>" class="btn btn-outline-secondary">Read More</a>
	</div>
	<div class="card-footer"style="font-size: 10px;"><span class="badge badge-dark"><%=post.category%></span>
	</div>
</div>




<% }) %>
